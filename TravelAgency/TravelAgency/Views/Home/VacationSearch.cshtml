@model IEnumerable<TravelAgency.Models.TravelAgency.Vacation>
    @{
        ViewBag.Title = "VacationSearch";
    }

    <!-- Section: Search -->
    <section id="search" class="section section-search teal darken-1 white-text center scrollspy">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <h3>Search Destinations</h3>
                    <div class="input-field">
                        @using (Ajax.BeginForm("VacationSearch", "Home",
                        new AjaxOptions
                        {
                            InsertionMode = InsertionMode.Replace,
                            HttpMethod = "GET"
                        }))
                        {
                            <input type="text" class="white grey-text autocomplete" id="autocomplete-input" placeholder="Paris, London, etc..." name="search">
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Section: Popular Places -->
    <section id="popular" class="section section-popular scrollspy">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col s12 m4">
                        <div class="card" style="height:520px">
                            <div class="card-image">
                                <img src="@item.ImageUrl" alt="">
                                <span class="card-title">@item.City, @item.Country</span>
                            </div>
                            <div class="card-content">
                                @item.ShortDescription
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>