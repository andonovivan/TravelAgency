@model TravelAgency.Models.TravelAgency.Vacation

@{
    ViewBag.Title = "VacationDetails";
}


<link rel="stylesheet" href="~/Content/vacationDetails.css">
<style>
    .view-source {
        position: fixed;
        display: block;
        right: 0;
        bottom: 0;
        margin-right: 40px;
        margin-bottom: 40px;
        z-index: 900;
    }
</style>
<div class="row">
    <div class="demo-ribbon teal darken-1"></div>
    <div class="demo-layout">
        <main class="demo-main">
            <div class="demo-container">
                <div class="col s12 m4" style="width:80%; margin-left:10%">
                    <div class="card">
                        <div class="card-image">
                            <img src="@Model.ImageUrlDetailed" alt="" style="height: 700px; overflow: hidden" class="materialboxed">
                            <span class="card-title" style="font-weight:bolder">@Model.City, @Model.Country</span>
                        </div>
                        <div class="card-content">
                            @Model.LongDescription
                        </div>
                        @if (Model.Reviews != null && Model.Reviews.Count() > 0)
                        {
                        <ul class="collection">
                            @foreach (var review in Model.Reviews)
                            {
                                <li class="collection-item avatar">
                                    <i class="material-icons circle">insert_chart</i>
                                    <span class="title">@review.ReviewerName</span>
                                    <p>
                                        @review.Description
                                    </p>
                                    <a href="#!" class="secondary-content" style="cursor: default"><span style="position:absolute; top: 1px; right: 25px;">@review.Rating</span><i class="material-icons">grade</i></a>
                                </li>
                            }
                        </ul>
                        }
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<a href="@Url.Action("VacationSearch", "Home")" class="waves-effect waves-light btn view-source">Back</a>
